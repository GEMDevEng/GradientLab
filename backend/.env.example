# Environment variables for GradientLab backend
# Copy this file to .env and fill in the values

# Flask settings
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True

# Database settings
# For development (SQLite)
DATABASE_URL=sqlite:///gradientlab.db
# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost/gradientlab

# JWT settings
JWT_SECRET_KEY=your-secret-key

# Cloud provider settings
# Oracle Cloud
OCI_USER_OCID=
OCI_FINGERPRINT=
OCI_TENANCY_OCID=
OCI_REGION=
OCI_KEY_FILE=
OCI_COMPARTMENT_OCID=

# Google Cloud
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

# Azure
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Gradient Network API
GRADIENT_API_URL=https://api.gradient.network
GRADIENT_API_KEY=

# Email settings (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TO=
